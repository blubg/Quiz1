<%= form_for @support_request do |f| %>
  <div class="form-group">
    <%= f.label(:name) %>
    <%= f.text_field(:name, {class: "form-control"}) %>
    <p class="help-block"></p>
  </div>
  <div class="form-group">
    <%= f.label(:email) %>
    <%= f.text_area :email, class: "form-control" %>
  </div>
    <div class="form-group">
      <%= f.label :department %> :
      <%= f.radio_button :department, "Sales" %> Sales |
      <%= f.radio_button :department, "Marketing" %> Marketing |
      <%= f.radio_button :department, "Technical" %> Technical |
    </div>
    <div class="form-group">
        <%= f.label(:message) %>
        <%= f.text_area :message, class: "form-control" %>
      </div>
      <%= f.submit({class: "btn btn-primary"}) %>
      <% end %>

      <% if @support_request.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@support_request.errors.count, "error") %>
            prohibited this request from being saved:
          </h2>
          <ul>
          <% @support_request.errors.full_messages.each do |msg| %>
          <%= msg %>
          <% end %>
      <% end %>

  
