<h1> Listing Support Requests </h1>

<table>
  <tr><th>Name</th>
      <th>Email</th>
      <th>Message</th>
  </tr>

  <% @support_requests.each do |support_request| %>
  <tr>
    <td><%= support_request.name %></td>

    <td><%= support_request.email %></td>

    <td><%= support_request.message %></td>

    <td><%= link_to 'Show', support_request_path(support_request) %></td>
    <td><%= link_to 'Edit', edit_support_request_path(support_request) %></td>
    <td><%= link_to 'Delete', support_request_path(support_request),
            method: :delete,
            data: { confirm: "Are you sure about that?" }%></td>
  <td><a href="#" class="btn btn-default btn-xs btn-block active">Done</a></td>

  </tr>
  <% end %>
</table>

<%= link_to 'New Support Request', new_support_request_path %>
